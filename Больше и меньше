x=800 
y=0
def setup():
    size(800,500)
    frameRate(50)
    fill(random(0,255,),random(0,255),random(0,255))
       
def draw():
    background(0)
    global x,y
    x=x-10
    y=y-10
    translate(width/2,height/2,x)
    fill(random(0,255,),random(0,255),random(0,255))
    circle(width/2,height/2,x)
    x+=1
    y-=1
